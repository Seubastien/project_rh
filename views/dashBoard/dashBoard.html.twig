{% extends "dashBoardBase.html.twig" %}

{% block main %}
	<section class="dashContainer">
		<div>
			<form action="/dashBoard" method="GET">
				<input id="searchBarr" type="search" name="search" placeholder="Tapez votre recherche">
				<button type="submit">Search</button>
			</form>
		</div>
		<div class="articleContainer">
			{% if enterprise.employeeCollection.length > 0 %}

				{% for employee in enterprise.employeeCollection %}

					<article>
						<div>
							<h3>{{employee.name}}</h3>
						</div>

						<p>Fonction:
							{{employee.function}}
						</p>
						<p>Nombre de blame:
							{{employee.blame}}
						</p>
						<div id="imgContainer">
							<img id="img" src="/images/uploads/{{employee.picture}}" alt="photoprojet">
						</div>
						<div>
							<a href="/employeeUpdate/{{employee.id}}">Modifier</a>
							<a class ="clashButton"href="/employeedelete/{{employee.id}}">Effacer</a>
							<a class ="clashButton"href="/blame/{{employee.id}}">Blamer</a>

						</div>
					</article>
				{% endfor %}
			</div>

		{% else %}

			<div>
				<h2 id="titleDashb">Pour l'instant vous n'avez aucun employé,<br>
					enregistrez votre premier employé en appuyant sur "Ajouter un employé"
				</h2>
			</div>
		{% endif %}
	</section>
{% endblock %}
